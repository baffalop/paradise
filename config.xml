<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.nemerofsky.paradise" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Paradise</name>
    <description>
        I Don't Know Where Paradise Is: an audio guide
    </description>
    <author email="nikita.gaidakov@gmail.com" href="http://github.com/baffalop">
        Nikita Gaidakov
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />

    <hook type="before_prepare" src="./scripts/build.sh" />

    <platform name="android">
        <allow-intent href="market:*" />

        <splash src="res/screen/splashscreen.png" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashScreenSpinnerColor" value="white" />

        <icon src="res/icon/icon-android-ldpi.png" density="ldpi" />
        <icon src="res/icon/icon-android-mdpi.png" density="mdpi" />
        <icon src="res/icon/icon-android-hdpi.png" density="hdpi" />
        <icon src="res/icon/icon-android-xhdpi.png" density="xhdpi" />
        <icon src="res/icon/icon-android-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon/icon-android-xxxhdpi.png" density="xxxhdpi" />

    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <splash src="res/screen/Default@2x~universal~anyany.png" />

        <icon src="res/icon/icon-ios-20@1x.png" width="20" height="20" />
        <icon src="res/icon/icon-ios-20@1x.png" width="20" height="20" />
        <icon src="res/icon/icon-ios-20@2x.png" width="40" height="40" />
        <icon src="res/icon/icon-ios-20@3x.png" width="60" height="60" />
        <icon src="res/icon/icon-ios-29@1x.png" width="29" height="29" />
        <icon src="res/icon/icon-ios-29@2x.png" width="58" height="58" />
        <icon src="res/icon/icon-ios-29@3x.png" width="87" height="87" />
        <icon src="res/icon/icon-ios-40@1x.png" width="40" height="40" />
        <icon src="res/icon/icon-ios-40@2x.png" width="80" height="80" />
        <icon src="res/icon/icon-ios-40@3x.png" width="120" height="120" />
        <icon src="res/icon/icon-ios-60@2x.png" width="120" height="120" />
        <icon src="res/icon/icon-ios-60@3x.png" width="180" height="180" />
        <icon src="res/icon/icon-ios-76@1x.png" width="76" height="76" />
        <icon src="res/icon/icon-ios-76@2x.png" width="152" height="152" />
        <icon src="res/icon/icon-ios-83.5@2x.png" width="167" height="167" />
        <icon src="res/icon/icon-ios-1024@1x.png" width="1024" height="1024" />

    </platform>
</widget>
